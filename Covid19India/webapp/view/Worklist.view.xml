<mvc:View controllerName="com.sap.dinesh.covid19india.dashboard.controller.Worklist" xmlns="sap.m" xmlns:semantic="sap.m.semantic"
	xmlns:viz="sap.viz.ui5.controls" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:suite="sap.suite.ui.commons"
	xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showSubHeader="true" showNavButton="false" title="{i18n>worklistViewTitle}">
		<semantic:customHeaderContent>
			<Image
				src="https://assets.website-files.com/5d9ba0eb5f6edb77992a99d0/5e62546c280007604ccbd27c_iconfinder_virus_disease_health_illness_medical_flu_corona_5859964.png"
				width="40px"/>
		</semantic:customHeaderContent>
		<semantic:content>
			<l:Grid defaultSpan="L12 M12 S12" class="sapUiResponsiveMargin" vSpacing="0" hSpacing="0">
				<Panel class="sapUiDemoFlexBoxSizeAdjustmentsZeroWidthItems">
					<FlexBox alignItems="Start">
						<items>
							<Button text="Total Confirmed Cases - {/statewise/0/confirmed}" width="100%" icon="" type="Reject" class="sapUiSmallMarginEnd">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Button>
							<Button text="Total Recovered Cases - {/statewise/0/recovered}" width="100%" class="sapUiSmallMarginEnd" type="Accept">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Button>
							<Button text="Last Updated Time - {/statewise/0/lastupdatedtime}" width="100%" type="Emphasized">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Button>
						</items>
					</FlexBox>
				</Panel>
				<VBox height="15px"></VBox>
				<!--State Wise chart-->
				<suite:ChartContainer id="idChartContainerStateWise" title="Covid19-India-Report By State" showFullScreen="true" autoAdjustHeight="false"
					renderComplete="renderComplete">
					<suite:ChartContainerContent icon="sap-icon://vertical-bullet-chart" title="Chart View" showFullScreen="true" showPersonalization="false"
						autoAdjustHeight="false" personalizationPress="attachPersonalizationPress">
						<suite:content>
							<core:Fragment fragmentName="com.sap.dinesh.covid19india.dashboard.view.VizChartState" type="JS"/>
						</suite:content>
					</suite:ChartContainerContent>
					<suite:ChartContainerContent id="CharttableStatewise" icon="sap-icon://table-chart" title="Table View">
						<suite:content>
							<Table items="{/statewise}">
								<columns>
									<Column width="100px" minScreenWidth="Tablet" demandPopin="true">
										<Text text="State Code"/>
									</Column>
									<Column  minScreenWidth="Tablet" demandPopin="true">
										<Text text="State"/>
									</Column>
									<Column>
										<Text text="Active Cases" minScreenWidth="Tablet" demandPopin="true"/>
									</Column>
									<Column>
										<Text text="Confirmed Cases" minScreenWidth="Tablet" demandPopin="true"/>
									</Column>
									<Column>
										<Text text="Recovered Cases" minScreenWidth="Tablet" demandPopin="true"/>
									</Column>
									<Column>
										<Text text="Last Updated Time" minScreenWidth="Tablet" demandPopin="true"/>
									</Column>
									<Column width="250px" minScreenWidth="Tablet" demandPopin="true">
										<Text text="State Notes"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<ObjectNumber number="{statecode}" state="None"/>
											<ObjectNumber number="{state}" state="None"/>
											<ObjectNumber number="{active}" state="Warning"/>
											<ObjectNumber number="{confirmed}" state="Error"/>
											<ObjectNumber number="{recovered}" state="Success"/>
											<ObjectNumber number="{lastupdatedtime}"/>
											<ObjectNumber number="{statenotes}" tooltip="{statenotes}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</suite:content>
					</suite:ChartContainerContent>
				</suite:ChartContainer>
				<!--State wise cases-->
				<VBox height="15px"></VBox>
				<suite:ChartContainer id="idChartContainerDateWise" title="Covid19-India-Report By Date" showFullScreen="true"
					renderComplete="renderComplete">
					<suite:ChartContainerContent icon="sap-icon://vertical-bullet-chart" title="Chart View" showFullScreen="true" showPersonalization="false"
						autoAdjustHeight="false" personalizationPress="attachPersonalizationPress">
						<suite:content>
							<core:Fragment fragmentName="com.sap.dinesh.covid19india.dashboard.view.VizChart" type="JS"/>
						</suite:content>
					</suite:ChartContainerContent>
					<suite:ChartContainerContent id="CharttableDatewise" icon="sap-icon://table-chart" title="Table View">
						<suite:content>
							<Table items="{/cases_time_series}">
								<columns>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Date"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Daily Confirmed"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Daily Deceased"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Daily Recovered"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Total Deceased"/>
									</Column>
									<Column  minScreenWidth="Tablet" demandPopin="true">
										<Text text="Total Recovered"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<ObjectNumber number="{date}" state="None"/>
											<ObjectNumber number="{dailyconfirmed}" state="Error"/>
											<ObjectNumber number="{dailydeceased}"/>
											<ObjectNumber number="{dailyrecovered}" state="Warning"/>
											<ObjectNumber number="{totaldeceased}"/>
											<ObjectNumber number="{totalrecovered}" state="Success"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</suite:content>
					</suite:ChartContainerContent>
				</suite:ChartContainer>
			</l:Grid>
			<Image
				src="https://assets.website-files.com/5d9ba0eb5f6edb77992a99d0/5e62546c280007604ccbd27c_iconfinder_virus_disease_health_illness_medical_flu_corona_5859964.png"
				width="50px"/>
		</semantic:content>
		<!--<semantic:customFooterContent>-->
		<!--	<OverflowToolbarButton icon="sap-icon://settings" text="Settings" press="onPressSetting"/>-->
		<!--</semantic:customFooterContent>-->
	</semantic:FullscreenPage>
</mvc:View>