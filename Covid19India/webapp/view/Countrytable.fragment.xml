<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Table items="{CountryData>/}">
		<headerToolbar>
			<OverflowToolbar>
				<SearchField liveChange=".onSearch" width="100%"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column width="50px" minScreenWidth="Tablet" demandPopin="true">
				<Text text=""/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Country"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Cases"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Recovered"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Deaths"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Today Cases"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Today Deaths"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Active Cases"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Critical Cases"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Image src="{CountryData>countryInfo/flag}" width="25px"/>
					<ObjectNumber number="{CountryData>country}" state="None"/>
					<ObjectNumber number="{CountryData>cases}" state="Error"/>
					<ObjectNumber number="{CountryData>recovered}" state="Success"/>
					<ObjectNumber number="{CountryData>deaths}" state="Error"/>
					<ObjectNumber number="{CountryData>todayCases}" state="Information"/>
					<ObjectNumber number="{CountryData>todayDeaths}"/>
					<ObjectNumber number="{CountryData>active}" state="Information"/>
					<ObjectNumber number="{CountryData>critical}" state="Error"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>